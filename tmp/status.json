{
    // maybe split this into 3 files
    // - players.json
    // - settings.json
    // - rounds.json
    // - maybe also game.json (might not be necessary, can share gameId in json objects)
    //    - game creation timestamp isn't created but who cares about that
    "$schema": "http://github.com/ksjbrown/poker/res/schemas/gamedata-1.0.json",
    "game": {
        "id": "1234",
        "timestamp": "<timestamp>"
    },
    "players": [
        {
            "id": 1,
            "name": "Keegan"
        },
        {
            "id": 2,
            "name": "Brown"
        }
    ],
    "settings": [
        {
            "round": 1,
            "apply": {
                "credits": 500,
                "bigBlind": 10,
                "smallBlind": 5
            }
        },
        {
            "round": 2,
            "apply": {
                "credits": 1000
            }
        }
    ],
    "rounds": [
        {
            "round": 1,
            "players": [ // dealer always position 0, small blind + big blind calculated relative to this
                {
                    "id": 1,
                    "cards": "ahad"
                },
                {
                    "id": 2,
                    "cards": "5s6c"
                }
            ],
            "cards": "2h4h5d6sts",
            "phases": {
                "preflop": {
                    "timestamp": "<timestamp>",
                    "elapsedTime": "<duration>",
                    "actions": [
                        {
                            "id": 1,
                            "action": "blind",
                            "amount": 5
                        },
                        {
                            "id": 2,
                            "action": "blind",
                            "amount": 10
                        },
                        {
                            "id": 1,
                            "action": "call",
                            "amount": 5
                        },
                        {
                            "id": 2,
                            "action": "check"
                        }
                    ]
                },
                "flop": {
                    "timestamp": "<timestamp>",
                    "elapsedTime": "<duration>",
                    "actions": [
                        {
                            "id": 1,
                            "action": "check"
                        },
                        {
                            "id": 2,
                            "action": "check"
                        }
                    ]
                },
                "turn": {
                    "timestamp": "<timestamp>",
                    "elapsedTime": "<duration>",
                    "actions": [
                        {
                            "id": 1,
                            "action": "bet",
                            "amount": 500
                        },
                        {
                            "id": 2,
                            "action": "fold"
                        }
                    ]
                }
            },
            "winnerId": 1
        }
    ]
}